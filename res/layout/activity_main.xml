<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


<androidx.constraintlayout.widget.ConstraintLayout
    app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

        <Button
            android:id="@+id/dexclassButton"
            android:layout_width="150dp"
            android:layout_height="50dp"
            android:layout_margin="10dp"
            android:backgroundTint="@color/design_default_color_primary"
            android:text="DexClass"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

        <TextView
            android:id="@+id/contactCheck"
            android:layout_width="150dp"
            android:layout_height="50dp"
            android:background="@android:color/darker_gray"
            android:padding="10dp"
            android:hint="..."
            android:text="Read Logcat"
            android:textAlignment="center"
            android:layout_margin="10dp"
            android:textAppearance="@style/TextAppearance.AppCompat.Large.Inverse"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toEndOf="@+id/dexclassButton"/>

        <Button
            android:id="@+id/dexPathButton"
            android:layout_width="150dp"
            android:layout_height="50dp"
            android:backgroundTint="@color/design_default_color_primary"
            android:text="PathClass"
            android:layout_margin="10dp"
            app:layout_constraintTop_toBottomOf="@+id/dexclassButton"
            app:layout_constraintStart_toStartOf="parent"/>

        <TextView
            android:id="@+id/randomNumberPath"
            android:layout_width="150dp"
            android:layout_height="50dp"
            android:background="@android:color/darker_gray"
            android:padding="10dp"
            android:hint="0"
            android:textAlignment="center"
            android:layout_margin="10dp"
            android:textAppearance="@style/TextAppearance.AppCompat.Large.Inverse"
            app:layout_constraintTop_toBottomOf="@+id/dexclassButton"
            app:layout_constraintStart_toEndOf="@+id/dexPathButton"/>

        <Button
            android:id="@+id/gButtonInMemory"
            android:layout_width="150dp"
            android:layout_height="50dp"
            android:layout_margin="10dp"
            android:backgroundTint="@color/design_default_color_primary"
            android:text="In Memory"
            app:layout_constraintTop_toBottomOf="@+id/dexPathButton"
            app:layout_constraintStart_toStartOf="parent"/>

        <TextView
            android:id="@+id/randomNumberInMemory"
            android:layout_width="150dp"
            android:layout_height="50dp"
            android:background="@android:color/darker_gray"
            android:padding="10dp"
            android:hint="0"
            android:layout_margin="10dp"
            android:textAlignment="center"
            android:textAppearance="@style/TextAppearance.AppCompat.Large.Inverse"
            app:layout_constraintTop_toBottomOf="@+id/dexPathButton"
            app:layout_constraintStart_toEndOf="@+id/gButtonInMemory"/>

